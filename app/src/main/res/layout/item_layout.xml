<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_rl1"
        android:layout_width="match_parent"
        android:background="#11000000"
        android:layout_margin="10dp"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/item_title_tv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="11111111" />
        <EditText
            android:id="@+id/item_edit_tv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="11111111"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/item_func_dele_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/item_title_tv"
            android:background="@drawable/border_12dp_3c7eff"
            android:gravity="center"
            android:text="🗑"
            android:textColor="@color/color_ededed"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/item_func_config_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/item_func_dele_tv"
            android:background="@drawable/border_12dp_3c7eff"
            android:gravity="center"
            android:text="⚙"
            android:textColor="@color/color_ededed"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/item_func_up_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/item_func_config_tv"
            android:background="@drawable/border_12dp_3c7eff"
            android:gravity="center"
            android:text="👆"
            android:textColor="@color/color_ededed"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/item_func_down_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/item_func_up_tv"
            android:background="@drawable/border_12dp_3c7eff"
            android:gravity="center"
            android:text="👇"
            android:textColor="@color/color_ededed"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/item_confirm_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/item_func_config_tv"

            android:gravity="center"
            android:text="✅"
            android:textColor="@color/color_ededed"
            android:textSize="25sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/item_cancel_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/item_func_up_tv"
            android:gravity="center"
            android:text="❎"
            android:textColor="@color/color_ededed"
            android:textSize="25sp"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>