<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/activity_xuanxiang_config_top_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/activity_title_text_size"
            android:text="编辑选项配置"/>
        <TextView
            android:id="@+id/activity_xuanxiang_config_top_back"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/activity_title_text_size"
            android:text="@string/back"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/activity_xuanxiang_config_mid_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="80dp">
            <TextView
                android:layout_width="@dimen/config_udp_mqtt_text_desc_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:text="UDP命令："></TextView>
            <EditText
                android:id="@+id/activity_xuanxiang_config_udp_msg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint=""></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="@dimen/config_udp_mqtt_text_desc_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:text="MQTTtopic："></TextView>
            <EditText
                android:id="@+id/activity_xuanxiang_config_mqtt_topic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint=""></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="@dimen/config_udp_mqtt_text_desc_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:text="MQTT消息"></TextView>
            <EditText
                android:id="@+id/activity_xuanxiang_config_mqtt_msg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint=""></EditText>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:layout_marginTop="-50dp"
        android:background="#22000000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_xuanxiang_config_bottom_confirm_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="保存"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/activity_xuanxiang_config_bottom_cancel_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>