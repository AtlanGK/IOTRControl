<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/activity_zhuti_top_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/activity_title_text_size"
            android:text="主题编辑"/>
        <TextView
            android:id="@+id/activity_zhuti_top_back"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/activity_title_text_size"
            android:text="@string/back"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/activity_iot_main_left_ll"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:text="主题1"
                android:textSize="20sp"
                android:background="#66000000"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_iot_main_right_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="#11000000">

                <TextView
                    android:id="@+id/activity_iot_main_right_tv0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="投影"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/activity_iot_main_right_tv1"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/activity_iot_main_right_tv0"
                    android:background="@drawable/border_12dp_3c7eff"
                    android:gravity="center"
                    android:text="开"
                    android:textColor="@color/color_ededed"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/activity_iot_main_right_tv2"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/activity_iot_main_right_tv1"
                    android:background="@drawable/border_12dp_3c7eff"
                    android:gravity="center"
                    android:text="关"
                    android:textColor="@color/color_ededed"
                    android:textSize="20sp" />


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:layout_marginTop="-50dp"
        android:background="#22000000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_zhuti_bottom_confirm_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="保存"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/activity_zhuti_bottom_cancel_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textSize="18sp" />

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_zhuti_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp" />




</LinearLayout>